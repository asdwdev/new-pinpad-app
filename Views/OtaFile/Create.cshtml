@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create OTA File";
}

<div class="p-6 flex justify-center">
    <div class="w-full max-w-2xl">
        <!-- Breadcrumb -->
        <div class="mb-4 text-sm">
            <a href="/OtaFile" class="text-teal-500 font-semibold hover:text-teal-600 transition-colors">OTA File</a> /
            <span class="text-gray-500">Create</span>
        </div>

        <!-- Card Form -->
        <div class="bg-white shadow rounded-lg border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Tambah OTA File</h2>

            <form id="createOtaFileForm" class="space-y-4">
                <!-- OtaDesc -->
                <div>
                    <label for="OtaDesc" class="block text-sm font-medium text-gray-700 mb-1">Deskripsi</label>
                    <input type="text" id="OtaDesc" name="OtaDesc" required
                        class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:ring-2 focus:ring-teal-500">
                </div>

                <!-- OtaFilename -->
                <div>
                    <label for="OtaFilename" class="block text-sm font-medium text-gray-700 mb-1">Nama File</label>
                    <input type="text" id="OtaFilename" name="OtaFilename" required
                        class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:ring-2 focus:ring-teal-500">
                </div>

                <!-- OtaAttachment -->
                <div>
                    <label for="OtaAttachment" class="block text-sm font-medium text-gray-700 mb-1">Attachment</label>
                    <input type="file" id="OtaAttachment" name="OtaAttachment"
                        class="w-full text-sm text-gray-700 border border-gray-300 rounded px-2 py-2 focus:ring-2 focus:ring-teal-500">
                </div>

                <!-- OtaStatus -->
                <div>
                    <label for="OtaStatus" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                    <select id="OtaStatus" name="OtaStatus"
                        class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:ring-2 focus:ring-teal-500">
                        <option value="1" selected>Active</option>
                        <option value="0">Inactive</option>
                    </select>
                </div>

                <!-- Buttons -->
                <div class="flex justify-end space-x-2 pt-4">
                    <button type="button" id="btnCancel"
                        class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-md shadow text-sm font-medium transition-colors">
                        Cancel
                    </button>
                    <button type="submit" id="btnSave"
                        class="px-4 py-2 bg-teal-500 hover:bg-teal-600 text-white rounded-md shadow text-sm font-medium transition-colors">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Helper: convert file ke base64
        function toBase64(file) {
            return new Promise((resolve, reject) => {
                const reader = new FileReader();
                reader.readAsDataURL(file);
                reader.onload = () => resolve(reader.result);
                reader.onerror = error => reject(error);
            });
        }

        $('#btnSave').on('click', async function (e) {
            e.preventDefault();

            const otaDesc = $('#OtaDesc').val().trim();
            const otaFilename = $('#OtaFilename').val().trim();
            const otaStatus = parseInt($('#OtaStatus').val());
            const fileInput = $('#OtaAttachment')[0];
            let base64File = "";

            if (!otaDesc || !otaFilename) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Oops...',
                    text: 'Deskripsi dan Nama File wajib diisi',
                });
                return;
            }

            // ðŸ”Ž Validasi file
            if (fileInput.files.length === 0) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Oops...',
                    text: 'Attachment wajib diupload',
                });
                return;
            }

            const file = fileInput.files[0];
            const allowedExtensions = ['.bin', '.zip', '.rar', '.pdf', '.xls', '.xlsx', '.csv'];
            const maxSizeMB = 5; // batas ukuran 5 MB

            const fileName = file.name.toLowerCase();
            const fileExt = fileName.substring(fileName.lastIndexOf('.'));

            if (!allowedExtensions.includes(fileExt)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Format tidak valid',
                    text: `Hanya file dengan format: ${allowedExtensions.join(', ')} yang diperbolehkan`,
                });
                return;
            }

            if (file.size > maxSizeMB * 1024 * 1024) {
                Swal.fire({
                    icon: 'error',
                    title: 'File terlalu besar',
                    text: `Ukuran maksimal file adalah ${maxSizeMB} MB`,
                });
                return;
            }

            base64File = await toBase64(file);

            try {
                const res = await fetch(`http://localhost:5125/api/otafiles`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        OtaDesc: otaDesc,
                        OtaFilename: otaFilename,
                        OtaAttachment: base64File,
                        OtaStatus: otaStatus
                    })
                });

                const result = await res.json();

                if (res.ok) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Berhasil',
                        text: 'OTA File berhasil ditambahkan',
                        timer: 2000,
                        showConfirmButton: false
                    });
                    window.location.href = '/OtaFile';
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Gagal',
                        text: result.message || 'Gagal membuat OTA File',
                    });
                }
            } catch (err) {
                console.error(err);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Terjadi kesalahan saat membuat OTA File',
                });
            }
        });

        $('#btnCancel').on('click', function () {
            window.location.href = '/OtaFile/Index';
        });
    </script>
}
