@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create SysResponseCode";
}

<div class="p-6 flex justify-center">
    <div class="w-full max-w-2xl">
        <!-- Breadcrumb -->
        <div class="mb-4 text-sm">
            <a href="/SysResponseCode"
                class="text-teal-500 font-semibold hover:text-teal-600 transition-colors">SysResponseCode</a> /
            <span class="text-gray-500">Create</span>
        </div>

        <!-- Card Form -->
        <div class="bg-white shadow rounded-lg border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Tambah SysResponseCode</h2>

            <form id="createSysResponseCodeForm" class="space-y-4">
                <!-- RescodeType -->
                <div>
                    <label for="RescodeType" class="block text-sm font-medium text-gray-700 mb-1">Tipe</label>
                    <input type="text" id="RescodeType" name="RescodeType" required
                        class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:ring-2 focus:ring-teal-500">
                </div>

                <!-- RescodeCode -->
                <div>
                    <label for="RescodeCode" class="block text-sm font-medium text-gray-700 mb-1">Kode</label>
                    <input type="text" id="RescodeCode" name="RescodeCode" required
                        class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:ring-2 focus:ring-teal-500">
                </div>

                <!-- RescodeDesc -->
                <div>
                    <label for="RescodeDesc" class="block text-sm font-medium text-gray-700 mb-1">Deskripsi</label>
                    <textarea id="RescodeDesc" name="RescodeDesc" rows="3" required
                        class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:ring-2 focus:ring-teal-500"></textarea>
                </div>

                <!-- Buttons -->
                <div class="flex justify-end space-x-2 pt-4">
                    <button type="button" id="btnCancel"
                        class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-md shadow text-sm font-medium transition-colors">
                        Cancel
                    </button>
                    <button type="submit" id="btnSave"
                        class="px-4 py-2 bg-teal-500 hover:bg-teal-600 text-white rounded-md shadow text-sm font-medium transition-colors">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $('#btnSave').on('click', async function (e) {
            e.preventDefault();

            const rescodeType = $('#RescodeType').val().trim();
            const rescodeCode = $('#RescodeCode').val().trim();
            const rescodeDesc = $('#RescodeDesc').val().trim();

            if (!rescodeType || !rescodeCode || !rescodeDesc) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Oops...',
                    text: 'Semua field wajib diisi',
                });
                return;
            }

            try {
                const res = await fetch(`http://localhost:5125/api/sysresponsecodes`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        RescodeType: rescodeType,
                        RescodeCode: rescodeCode,
                        RescodeDesc: rescodeDesc
                    })
                });

                const result = await res.json();

                if (res.ok) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Berhasil',
                        text: 'SysResponseCode berhasil ditambahkan',
                        timer: 2000,
                        showConfirmButton: false
                    });
                    window.location.href = '/ResponseLog/Index';
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Gagal',
                        text: result.message || 'Gagal membuat SysResponseCode',
                    });
                }
            } catch (err) {
                console.error(err);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Terjadi kesalahan saat membuat SysResponseCode',
                });
            }
        });

        $('#btnCancel').on('click', function () {
            window.location.href = '/ResponseLog/Index';
        });
    </script>
}
