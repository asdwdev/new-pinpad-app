@{
    ViewData["Title"] = "Response Code / Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-6">
    <!-- Page Header -->
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Response Code / Edit</h1>
    </div>

    <!-- Form -->
    <div class="max-w-2xl">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <form method="post" action="@Url.Action("Edit", "ResponseLog")">
                <!-- Response Type Field -->
                <div class="mb-6">
                    <label for="responseType" class="block text-sm font-medium text-gray-700 mb-2">
                        RESPONSE TYPE
                    </label>
                    <div class="relative">
                        <select id="responseType" name="responseType" 
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 appearance-none bg-white">
                            <option value="Device Log" selected>Device Log</option>
                            <option value="Transaction Log">Transaction Log</option>
                            <option value="Error Log">Error Log</option>
                            <option value="System Log">System Log</option>
                        </select>
                        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                            <i class="fas fa-chevron-down text-gray-400"></i>
                        </div>
                    </div>
                </div>

                <!-- Code Field -->
                <div class="mb-6">
                    <label for="code" class="block text-sm font-medium text-gray-700 mb-2">
                        CODE
                    </label>
                    <input type="text" id="code" name="code" value="CP"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
                           placeholder="Enter response code">
                </div>

                <!-- Code Description Field -->
                <div class="mb-8">
                    <label for="codeDescription" class="block text-sm font-medium text-gray-700 mb-2">
                        CODE DESCRIPTION
                    </label>
                    <input type="text" id="codeDescription" name="codeDescription" value="Enter Create PIN Menu"
                           class="w-full px-4 py-3 border border-teal-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
                           placeholder="Enter code description">
                </div>

                <!-- Form Actions -->
                <div class="flex justify-end space-x-4">
                    <a href="@Url.Action("Index", "ResponseLog")" 
                       class="px-6 py-3 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition-colors duration-200">
                        Cancel
                    </a>
                    <button type="submit" 
                            class="px-6 py-3 bg-teal-600 text-white rounded-lg hover:bg-teal-700 transition-colors duration-200">
                        Update
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Form submission handling
    document.querySelector('form').addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Get form data
        const formData = new FormData(this);
        const responseType = formData.get('responseType');
        const code = formData.get('code');
        const codeDescription = formData.get('codeDescription');
        
        // Basic validation
        if (!code || !codeDescription) {
            alert('Please fill in all required fields');
            return;
        }
        
        // Simulate form submission (in real app, this would submit to server)
        console.log('Form submitted:', {
            responseType,
            code,
            codeDescription
        });
        
        // Show success message and redirect
        alert('Response Code updated successfully!');
        window.location.href = '@Url.Action("Index", "ResponseLog")';
    });
    
    // Auto-focus on code description field
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('codeDescription').focus();
    });
</script>
