@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Sys Response Codes";
}

<div class="p-4 md:p-6">
    <div class="mb-4 text-sm px-4 sm:px-0">
        <a href="#" class="text-teal-500 font-semibold hover:text-teal-600 transition-colors">Sys Response Codes</a> /
        <span class="text-gray-500">Inquiry</span>
    </div>

    <div class="flex gap-2 p-5">
        <a href="/ResponseLog/Create" id="btnCreate" class="bg-teal-500 text-white px-4 py-2 rounded-md 
           hover:bg-teal-600 transition-colors flex items-center gap-2 
           text-sm font-medium">
            <i class="fa fa-plus"></i>
            <span>Tambah Response Code</span>
        </a>
    </div>

    <!-- Table Controls -->
    <div class="flex flex-col md:flex-row justify-between items-center mb-6">
        <!-- Search field -->
        <div class="flex items-center">
            <label class="text-sm text-gray-700 mr-3">Search:</label>
            <input type="text" id="searchInput" placeholder="Search in all columns..."
                class="border border-gray-300 px-4 py-2 rounded focus:ring-2 focus:ring-blue-400 text-sm min-w-[250px]">
        </div>

        <!-- Page Size Selector -->
        <div class="flex items-center mt-2 md:mt-0">
            <label class="text-sm text-gray-700 mr-3">Show:</label>
            <select id="pageSizeSelect"
                class="border border-gray-300 px-3 py-2 rounded focus:ring-2 focus:ring-blue-400 text-sm">
                <option value="10">10</option>
                <option value="25">25</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
            <span class="text-sm text-gray-700 ml-2">entries</span>
        </div>
    </div>

    <!-- Table Container -->
    <div class="bg-white shadow rounded-lg border border-gray-200 overflow-hidden">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-gray-100 text-gray-700 text-sm">
                    <th class="px-4 py-3 font-semibold">Type</th>
                    <th class="px-4 py-3 font-semibold">Code</th>
                    <th class="px-4 py-3 font-semibold">Description</th>
                    <th class="px-4 py-3 font-semibold">Last Updated</th>
                    <th class="px-4 py-3 font-semibold">Action</th>
                </tr>
            </thead>
            <tbody id="tableBody" class="text-sm">
                <!-- Data from API will appear here -->
            </tbody>
        </table>
    </div>
</div>

<!-- JQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $(document).ready(function () {
        loadSysResponseCodes();

        function loadSysResponseCodes() {
            $.ajax({
                url: "http://localhost:5125/api/sysresponsecodes",
                type: "GET",
                success: function (data) {
                    let rows = "";
                    $.each(data, function (i, item) {
                        rows += `
              <tr class="border-b">
                <td class="px-4 py-2">${item.rescodeType}</td>
                <td class="px-4 py-2">${item.rescodeCode}</td>
                <td class="px-4 py-2">${item.rescodeDesc}</td>
                <td class="px-4 py-2">${item.rescodeUpdateDate ? new Date(item.rescodeUpdateDate).toLocaleString() : "-"}</td>
                <td class="px-4 py-2 flex gap-2">
                  <a href="/ResponseLog/Edit/${item.rescodeId}"
                    class="bg-orange-500 text-white w-8 h-8 rounded hover:bg-orange-600 transition-colors flex items-center justify-center">
                    <i class="fa fa-edit"></i>
                  </a>
                  <button onclick="deleteSysResponse('${item.rescodeId}', '${item.rescodeCode}')"
                    class="bg-red-500 text-white w-8 h-8 rounded hover:bg-red-600 transition-colors flex items-center justify-center">
                    <i class="fa fa-times"></i>
                  </button>
                </td>
              </tr>`;
                    });
                    $("#tableBody").html(rows);
                },
                error: function (err) {
                    console.error("Error loading data:", err);
                }
            });
        }

        // Delete function with SweetAlert
        window.deleteSysResponse = function (id, code) {
            Swal.fire({
                title: 'Konfirmasi',
                text: `Yakin ingin menghapus Response Code: ${code}?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Ya, Hapus',
                cancelButtonText: 'Batal'
            }).then((result) => {
                if (!result.isConfirmed) return;

                $.ajax({
                    url: `http://localhost:5125/api/sysresponsecodes/${id}`,
                    type: "DELETE",
                    success: function (response) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Berhasil',
                            text: response?.message || `Response Code ${code} berhasil dihapus`,
                            timer: 2000,
                            showConfirmButton: false
                        });

                        // reload tabel
                        loadSysResponseCodes();
                    },
                    error: function (xhr) {
                        const res = xhr.responseJSON;
                        Swal.fire({
                            icon: 'error',
                            title: 'Gagal',
                            text: res?.message || 'Terjadi kesalahan saat menghapus data'
                        });
                    }
                });
            });
        };
    });
</script>