<!-- Success Notification (Hidden by default, can be shown via JavaScript) -->
<div id="successNotification" class="fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg transform translate-x-full transition-transform duration-300 z-50">
    <div class="flex items-center">
        <i class="fas fa-check-circle mr-2"></i>
        <span>Added Successfully!</span>
    </div>
</div>

<script>
    // Function to show success notification
    function showSuccessNotification() {
        const notification = document.getElementById('successNotification');
        notification.classList.remove('translate-x-full');
        
        // Hide after 3 seconds
        setTimeout(() => {
            notification.classList.add('translate-x-full');
        }, 3000);
    }

    // Show notification when page loads (for demo purposes)
    // In real app, this would be triggered by form submission
    document.addEventListener('DOMContentLoaded', function() {
        // Uncomment the line below to show notification on page load
