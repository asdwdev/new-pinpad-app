@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Regional - Create";
}

<div class="mb-4 text-sm px-4 sm:px-0">
    <a href="/Regional" class="text-teal-500 font-semibold hover:text-teal-600 transition-colors">Regional</a> /
    <span class="text-gray-500">Create</span>
</div>

<!-- Form -->
<div class="bg-white p-4 sm:p-6 rounded-lg shadow max-w-4xl mx-auto">
    <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Create Regional</h3>

        <!-- Code -->
        <div>
            <label class="block text-gray-700 text-sm font-medium mb-2">REGIONAL CODE:</label>
            <input id="code" type="text"
                class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all"
                placeholder="Masukkan kode regional">
        </div>

        <!-- Name -->
        <div>
            <label class="block text-gray-700 text-sm font-medium mb-2">REGIONAL NAME:</label>
            <input id="name" type="text"
                class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all"
                placeholder="Masukkan nama regional">
        </div>

        <!-- Buttons -->
        <div class="flex justify-end gap-3 mt-6">
            <button id="btnCancel" type="button"
                class="bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-lg font-medium transition-colors">
                Cancel
            </button>
            <button id="btnSave" type="button"
                class="bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg font-medium transition-colors">
                Save
            </button>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $('#btnSave').on('click', async function () {
        const code = $('#code').val().trim();
        const name = $('#name').val().trim();

        if (!code || !name) {
            Swal.fire({
                icon: 'warning',
                title: 'Oops...',
                text: 'Code dan Name wajib diisi',
            });
            return;
        }

        try {
            const res = await fetch(`http://localhost:5125/api/regionals`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ code, name })
            });

            const result = await res.json();

            if (res.ok) {
                await Swal.fire({
                    icon: 'success',
                    title: 'Berhasil',
                    text: 'Regional berhasil ditambahkan',
                    timer: 2000,
                    showConfirmButton: false
                });
                window.location.href = '/Regional/Index';
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Gagal',
                    text: result.message || 'Gagal membuat regional',
                });
            }
        } catch (err) {
            console.error(err);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Terjadi kesalahan saat membuat regional',
            });
        }
    });

    $('#btnCancel').on('click', function () {
        window.location.href = '/Regional/Index';
    });
</script>
