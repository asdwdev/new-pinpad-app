@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Users";
}

<div class="p-4 md:p-6">
    <div class="mb-4">
        <a href="/User/Create"
            class="bg-teal-500 hover:bg-teal-600 text-white px-4 py-2 rounded-md shadow text-sm font-medium transition-colors inline-flex items-center">
            <span class="mr-1 font-bold text-lg">+</span> Tambah Users
        </a>
    </div>

    <!-- Table Container -->
    <div class="bg-white shadow-lg rounded-lg border border-gray-200 overflow-hidden">
        <!-- Table Header with Search -->
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="flex items-center mt-2 md:mt-0">
                    <label class="text-sm text-gray-700 mr-3">Show:</label>
                    <select id="pageSizeSelect"
                        class="border border-gray-300 px-3 py-2 rounded focus:ring-2 focus:ring-blue-400 text-sm">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                    <span class="text-sm text-gray-700 ml-2">entries</span>
                </div>
                <!-- Search Box -->
                <div class="flex items-center gap-2">
                    <label class="text-sm font-medium text-gray-700">Search:</label>
                    <input type="text" id="searchInput" placeholder="Search in all columns..."
                        class="border border-gray-300 rounded px-3 py-2 text-sm focus:ring-2 focus:ring-teal-500 focus:border-transparent min-w-[250px]">
                </div>
            </div>
        </div>



        <!-- Table Responsive Wrapper -->
        <div class="overflow-x-auto">
            <table id="userListTable" class="min-w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-100 text-gray-700 text-sm">
                        <!-- Nomor urut -->
                        <th class="px-4 py-3 font-semibold whitespace-nowrap border-b border-gray-200">
                            No
                        </th>
                        <!-- Username -->
                        <th class="px-4 py-3 font-semibold cursor-pointer hover:bg-gray-200 transition-colors whitespace-nowrap border-b border-gray-200"
                            data-column="username">
                            <div class="flex items-center justify-between">
                                <span>Username</span>
                                <div class="sort-indicator ml-2">
                                    <i class="fa fa-sort text-gray-400"></i>
                                </div>
                            </div>
                        </th>
                        <!-- Fullname -->
                        <th class="px-4 py-3 font-semibold cursor-pointer hover:bg-gray-200 transition-colors whitespace-nowrap border-b border-gray-200"
                            data-column="fullname">
                            <div class="flex items-center justify-between">
                                <span>Fullname</span>
                                <div class="sort-indicator ml-2">
                                    <i class="fa fa-sort text-gray-400"></i>
                                </div>
                            </div>
                        </th>
                        <!-- Email -->
                        <th class="px-4 py-3 font-semibold cursor-pointer hover:bg-gray-200 transition-colors whitespace-nowrap border-b border-gray-200"
                            data-column="email">
                            <div class="flex items-center justify-between">
                                <span>Email</span>
                                <div class="sort-indicator ml-2">
                                    <i class="fa fa-sort text-gray-400"></i>
                                </div>
                            </div>
                        </th>
                        <!-- Access Level -->
                        <th class="px-4 py-3 font-semibold cursor-pointer hover:bg-gray-200 transition-colors whitespace-nowrap border-b border-gray-200"
                            data-column="accesslevel">
                            <div class="flex items-center justify-between">
                                <span>Access Level</span>
                                <div class="sort-indicator ml-2">
                                    <i class="fa fa-sort text-gray-400"></i>
                                </div>
                            </div>
                        </th>
                        <!-- NIP -->
                        <th class="px-4 py-3 font-semibold cursor-pointer hover:bg-gray-200 transition-colors whitespace-nowrap border-b border-gray-200"
                            data-column="nip">
                            <div class="flex items-center justify-between">
                                <span>NIP</span>
                                <div class="sort-indicator ml-2">
                                    <i class="fa fa-sort text-gray-400"></i>
                                </div>
                            </div>
                        </th>
                        <!-- Branch -->
                        <th class="px-4 py-3 font-semibold cursor-pointer hover:bg-gray-200 transition-colors whitespace-nowrap border-b border-gray-200"
                            data-column="branch">
                            <div class="flex items-center justify-between">
                                <span>Branch</span>
                                <div class="sort-indicator ml-2">
                                    <i class="fa fa-sort text-gray-400"></i>
                                </div>
                            </div>
                        </th>
                        <!-- Status -->
                        <th class="px-4 py-3 font-semibold cursor-pointer hover:bg-gray-200 transition-colors whitespace-nowrap border-b border-gray-200"
                            data-column="islocked">
                            <div class="flex items-center justify-between">
                                <span>Status</span>
                                <div class="sort-indicator ml-2">
                                    <i class="fa fa-sort text-gray-400"></i>
                                </div>
                            </div>
                        </th>
                        <!-- Created At -->
                        <th class="px-4 py-3 font-semibold cursor-pointer hover:bg-gray-200 transition-colors whitespace-nowrap border-b border-gray-200"
                            data-column="createdat">
                            <div class="flex items-center justify-between">
                                <span>Created At</span>
                                <div class="sort-indicator ml-2">
                                    <i class="fa fa-sort text-gray-400"></i>
                                </div>
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody id="tableBody" class="text-sm">
                    <!-- Data dari API bakal masuk di sini -->
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="text-sm text-gray-600" id="tableInfo">
                    Showing 0 to 0 of 0 entries
                </div>
                <div class="flex items-center space-x-2" id="paginationContainer">
                    <button id="prevBtn"
                        class="px-3 py-2 border border-gray-300 rounded hover:bg-gray-100 text-sm transition-colors disabled:opacity-50 disabled:cursor-not-allowed bg-white"
                        disabled>
                        Previous
                    </button>
                    <div id="pageNumbers" class="flex space-x-1"></div>
                    <button id="nextBtn"
                        class="px-3 py-2 border border-gray-300 rounded hover:bg-gray-100 text-sm transition-colors disabled:opacity-50 disabled:cursor-not-allowed bg-white"
                        disabled>
                        Next
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $.ajax({
        url: "http://localhost:5125/api/users",
        method: "GET",
        success: function (res) {
            if (Array.isArray(res)) {  // langsung cek array
                let rows = "";
                res.forEach((user, index) => {
                    rows += `
                    <tr class="border-b">
                        <td class="px-4 py-2">${index + 1}</td>
                        <td class="px-4 py-2">${user.username}</td>
                        <td class="px-4 py-2">${user.fullName}</td>
                        <td class="px-4 py-2">${user.email}</td>
                        <td class="px-4 py-2">${user.accessLevel}</td>
                        <td class="px-4 py-2">${user.nip || "-"}</td>
                        <td class="px-4 py-2">${user.branch || "-"}</td>
                        <td class="px-4 py-2">${user.isLocked ? "Locked" : "Active"}</td>
                        <td class="px-4 py-2">${user.createdAt ? new Date(user.createdAt).toLocaleDateString() : "-"}</td>
                    </tr>
                `;
                });
                $("#tableBody").html(rows);
            } else {
                $("#tableBody").html(`
                <tr>
                    <td colspan="9" class="text-center text-red-500 py-3">
                        Unexpected API response
                    </td>
                </tr>
            `);
            }
        },
        error: function () {
            $("#tableBody").html(`
            <tr>
                <td colspan="9" class="text-center text-red-500 py-3">
                    Failed to load user data
                </td>
            </tr>
        `);
        }
    });
</script>