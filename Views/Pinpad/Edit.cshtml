@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Pinpad Logistik - Edit";
}

<div class="mb-4 text-sm px-4 sm:px-0">
    <a href="#" class="text-teal-500 font-semibold hover:text-teal-600 transition-colors">Pinpad Logistik</a> /
    <span class="text-gray-500">Edit</span>
</div>

<!-- Form -->
<div class="bg-white p-4 sm:p-6 rounded-lg shadow max-w-6xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

        <!-- Left Section - Pinpad Details -->
        <div class="space-y-4">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Pinpad Details</h3>

            <!-- Serial Number -->
            <div>
                <label class="block text-gray-700 text-sm font-medium mb-2">SERIAL NUMBER:</label>
                <input id="serialNumber" type="text" disabled
                    class="w-full border border-gray-300 rounded-lg p-3 bg-gray-100 cursor-not-allowed focus:ring-2 focus:ring-gray-400 focus:border-transparent transition-all">
            </div>

            <!-- Regional -->
            <div>
                <label class="block text-gray-700 text-sm font-medium mb-2">REGIONAL:</label>
                <select disabled id="regional"
                    class="w-full border border-gray-300 rounded-lg p-3 bg-gray-100 cursor-not-allowed focus:ring-2 focus:ring-gray-400 focus:border-transparent transition-all">
                    <option>Kanwil Jakarta I</option>
                </select>
            </div>

            <!-- Cabang Induk -->
            <div>
                <label class="block text-gray-700 text-sm font-medium mb-2">CABANG INDUK:</label>
                <select disabled id="cabangInduk"
                    class="w-full border border-gray-300 rounded-lg p-3 bg-gray-100 cursor-not-allowed focus:ring-2 focus:ring-gray-400 focus:border-transparent transition-all">
                    <option>00701 - KCS JAKARTA HARMONI</option>
                </select>
            </div>

            <!-- Outlet -->
            <div>
                <label class="block text-gray-700 text-sm font-medium mb-2">OUTLET:</label>
                <select disabled id="outlet"
                    class="w-full border border-gray-300 rounded-lg p-3 bg-gray-100 cursor-not-allowed focus:ring-2 focus:ring-gray-400 focus:border-transparent transition-all">
                    <option>00727 - KCPS Jakarta Tanah Abang</option>
                </select>
            </div>

            <!-- IP Low and IP High side by side -->
            <div class="grid grid-cols-2 gap-4">
                <!-- IP Low -->
                <div>
                    <label class="block text-gray-700 text-sm font-medium mb-2">IP LOW:</label>
                    <input type="text" id="ipLow" disabled
                        class="w-full border border-gray-300 rounded-lg p-3 bg-gray-100 cursor-not-allowed focus:ring-2 focus:ring-gray-400 focus:border-transparent transition-all">
                </div>

                <!-- IP High -->
                <div>
                    <label class="block text-gray-700 text-sm font-medium mb-2">IP HIGH:</label>
                    <input type="text" id="ipHigh" disabled
                        class="w-full border border-gray-300 rounded-lg p-3 bg-gray-100 cursor-not-allowed focus:ring-2 focus:ring-gray-400 focus:border-transparent transition-all">
                </div>
            </div>
        </div>

        <!-- Right Section - Damage/Malfunction Information -->
        <div class="space-y-4">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Damage/Malfunction Information</h3>

            <!-- Kerusakan -->
            <div>
                <label class="block text-gray-700 text-sm font-medium mb-2">KERUSAKAN:</label>
                <select id="kerusakanSelect"
                    class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all">
                    <option value="">--Select Kerusakan Pinpad--</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Buttons -->
    <div class="mt-8 flex justify-end gap-3">
        <button
            class="bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-lg font-medium transition-colors">Cancel</button>
        <button
            class="bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg font-medium transition-colors">Update</button>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(async function () {
        const id = @ViewBag.Id;
        try {
            const res = await fetch(`http://localhost:5125/api/pinpads/${id}`);
            if (!res.ok) throw new Error('Not found');
            const d = await res.json();

            $('#serialNumber').val(d.serialNumber || '');
            $('#regional').html(`<option>${d.regional || ''}</option>`);
            $('#cabangInduk').html(`<option>${d.cabangInduk || ''}</option>`);
            $('#outlet').html(`<option>${d.outletCode} - ${d.outletName}</option>`);
            $('#ipLow').val(d.ipLow || '');
            $('#ipHigh').val(d.ipHigh || '');

            // Isi select kerusakan cuma dari API GetById
            if (d.statusRepairDesc) {
                $('#kerusakanSelect').append(
                    `<option value="${d.statusRepairCode}" selected>${d.statusRepairCode} - ${d.statusRepairDesc}</option>`
                );
            }

        } catch (e) {
            alert('Data tidak ditemukan');
            window.location.href = '/Pinpad';
        }
    });

</script>
