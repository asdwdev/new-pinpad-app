@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Pinpad Logistik - Edit";
}

<div class="mb-4 text-sm px-4 sm:px-0">
    <a href="#" class="text-teal-500 font-semibold hover:text-teal-600 transition-colors">Pinpad Logistik</a> /
    <span class="text-gray-500">Edit</span>
</div>

<!-- Form -->
<div class="bg-white p-4 sm:p-6 rounded-lg shadow max-w-6xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

        <!-- Left Section - Pinpad Details -->
        <div class="space-y-4">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Pinpad Details</h3>

            <!-- Serial Number -->
            <div>
                <label class="block text-gray-700 text-sm font-medium mb-2">SERIAL NUMBER:</label>
                <input id="serialNumber" type="text" disabled
                    class="w-full border border-gray-300 rounded-lg p-3 bg-gray-100 cursor-not-allowed focus:ring-2 focus:ring-gray-400 focus:border-transparent transition-all">
            </div>

            <!-- Regional -->
            <div>
                <label class="block text-gray-700 text-sm font-medium mb-2">REGIONAL:</label>
                <select disabled id="regional"
                    class="w-full border border-gray-300 rounded-lg p-3 bg-gray-100 cursor-not-allowed focus:ring-2 focus:ring-gray-400 focus:border-transparent transition-all">
                    <option>Kanwil Jakarta I</option>
                </select>
            </div>

            <!-- Cabang Induk -->
            <div>
                <label class="block text-gray-700 text-sm font-medium mb-2">CABANG INDUK:</label>
                <select disabled id="cabangInduk"
                    class="w-full border border-gray-300 rounded-lg p-3 bg-gray-100 cursor-not-allowed focus:ring-2 focus:ring-gray-400 focus:border-transparent transition-all">
                    <option>00701 - KCS JAKARTA HARMONI</option>
                </select>
            </div>

            <!-- Outlet -->
            <div>
                <label class="block text-gray-700 text-sm font-medium mb-2">OUTLET:</label>
                <select disabled id="outlet"
                    class="w-full border border-gray-300 rounded-lg p-3 bg-gray-100 cursor-not-allowed focus:ring-2 focus:ring-gray-400 focus:border-transparent transition-all">
                    <option>00727 - KCPS Jakarta Tanah Abang</option>
                </select>
            </div>

            <!-- IP Low and IP High side by side -->
            <div class="grid grid-cols-2 gap-4">
                <!-- IP Low -->
                <div>
                    <label class="block text-gray-700 text-sm font-medium mb-2">IP LOW:</label>
                    <input type="text" id="ipLow" disabled
                        class="w-full border border-gray-300 rounded-lg p-3 bg-gray-100 cursor-not-allowed focus:ring-2 focus:ring-gray-400 focus:border-transparent transition-all">
                </div>

                <!-- IP High -->
                <div>
                    <label class="block text-gray-700 text-sm font-medium mb-2">IP HIGH:</label>
                    <input type="text" id="ipHigh" disabled
                        class="w-full border border-gray-300 rounded-lg p-3 bg-gray-100 cursor-not-allowed focus:ring-2 focus:ring-gray-400 focus:border-transparent transition-all">
                </div>
            </div>
        </div>

        <!-- Right Section - Damage/Malfunction Information -->
        <div class="flex flex-col justify-between space-y-4">
            <div>
                <h3 class="text-lg font-semibold text-gray-800 mb-4">Damage/Malfunction Information</h3>

                <!-- Kerusakan -->
                <div>
                    <label class="block text-gray-700 text-sm font-medium mb-2">KERUSAKAN:</label>
                    <select id="kerusakanSelect"
                        class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all">
                        <option value="">--Select Kerusakan Pinpad--</option>
                    </select>
                </div>
            </div>

            <!-- Buttons -->
            <div class="flex justify-end gap-3">
                <button id="btnCancel" type="button"
                    class="bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-lg font-medium transition-colors">
                    Cancel
                </button>
                <button id="btnUpdate" type="button"
                    class="bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg font-medium transition-colors">
                    Update
                </button>
            </div>
        </div>

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $(async function () {
        const id = @ViewBag.Id;
        try {
            // Ambil data pinpad
            const res = await fetch(`http://localhost:5125/api/pinpads/${id}`);
            if (!res.ok) throw new Error('Not found');
            const d = await res.json();

            $('#serialNumber').val(d.serialNumber || '');
            $('#regional').html(`<option>${d.regional || ''}</option>`);
            $('#cabangInduk').html(`<option>${d.cabangInduk || ''}</option>`);
            $('#outlet').html(`<option>${d.outletCode} - ${d.outletName}</option>`);
            $('#ipLow').val(d.ipLow || '');
            $('#ipHigh').val(d.ipHigh || '');

            // Simpan selected awal
            const selectedCode = d.statusRepairCode || '';
            const selectedDesc = d.statusRepairDesc || '';

            // Ambil semua opsi StatusRepair
            const res2 = await fetch(`http://localhost:5125/api/pinpads/status-repairs`);
            const list = await res2.json();

            // Kosongkan select dulu
            $('#kerusakanSelect').empty();
            $('#kerusakanSelect').append('<option value="">--Select Kerusakan Pinpad--</option>');

            // Loop semua opsi
            list.forEach(item => {
                const isSelected = (item.code === selectedCode) ? 'selected' : '';
                $('#kerusakanSelect').append(
                    `<option value="${item.code}" ${isSelected}>${item.code} - ${item.description}</option>`
                );
            });

        } catch (e) {
            alert('Data tidak ditemukan');
            window.location.href = '/Pinpad';
        }
    });
</script>
<script>
    // Tombol Update
    $('#btnUpdate').on('click', async function () {
        const id = @ViewBag.Id;
        const selectedCode = $('#kerusakanSelect').val();

        if (!selectedCode) {
            Swal.fire({
                icon: 'warning',
                title: 'Oops...',
                text: 'Silakan pilih kerusakan terlebih dahulu',
            });
            return;
        }

        const confirmResult = await Swal.fire({
            title: 'Konfirmasi',
            text: 'Yakin ingin update status repair?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'Ya, Update',
            cancelButtonText: 'Batal',
            reverseButtons: true
        });

        if (!confirmResult.isConfirmed) return;

        try {
            const res = await fetch(`http://localhost:5125/api/pinpads/${id}/maintenance`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    statusRepair: selectedCode
                })
            });

            const result = await res.json();

            if (res.ok && result.success) {
                await Swal.fire({
                    icon: 'success',
                    title: 'Berhasil',
                    text: 'Status repair berhasil diperbarui',
                    timer: 2000,
                    showConfirmButton: false
                });
                window.location.href = '/Pinpad/Index';
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Gagal',
                    text: result.message || 'Gagal memperbarui status',
                });
            }
        } catch (err) {
            console.error(err);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Terjadi kesalahan saat mengupdate',
            });
        }
    });

    // Tombol Cancel
    $('#btnCancel').on('click', function () {
        window.location.href = '/Pinpad/Index';
    });
</script>
