<form id="createForm" method="post" class="max-w-4xl mx-auto bg-white rounded-xl border border-gray-200 shadow-sm">
  <!-- Card header -->
  <div class="px-6 py-4 border-b border-gray-100">
    <h2 class="text-base font-semibold text-gray-800">Create Pinpad</h2>
    <p class="text-sm text-gray-500">Isi data pinpad sesuai cabang & outlet.</p>
  </div>

  <!-- Card body -->
  <div class="px-6 py-6">
    <div class="hidden text-red-600 mb-4" id="formErrors"></div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Serial Number -->
      <div>
        <label for="serialNumber" class="block text-[11px] font-semibold tracking-wider text-gray-600 mb-1">
          SERIAL NUMBER <span class="text-red-500">*</span>
        </label>
        <input id="serialNumber" name="serialNumber" maxlength="20" required autocomplete="off" placeholder="Contoh: 879123"
               class="block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-gray-800 placeholder-gray-400
                      focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent" />
        <span class="mt-1 text-xs text-red-600"></span>
      </div>

      <!-- Regional -->
      <div>
        <label for="regional" class="block text-[11px] font-semibold tracking-wider text-gray-600 mb-1">
          REGIONAL <span class="text-red-500">*</span>
        </label>
        <select id="regional" name="regional" required
                class="block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-gray-800
                       focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent">
          <option value="">Pilih Regional</option>
        </select>
        <span class="mt-1 text-xs text-red-600"></span>
      </div>

      <!-- Cabang Induk -->
      <div>
        <label for="cabangInduk" class="block text-[11px] font-semibold tracking-wider text-gray-600 mb-1">
          CABANG INDUK <span class="text-red-500">*</span>
        </label>
        <select id="cabangInduk" name="cabangInduk" required
                class="block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-gray-800
                       focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent
                       disabled:bg-gray-100 disabled:text-gray-500 disabled:cursor-not-allowed">
          <option value="">Pilih Cabang Induk</option>
        </select>
        <span class="mt-1 text-xs text-red-600"></span>
      </div>

      <!-- Outlet -->
      <div>
        <label for="outlet" class="block text-[11px] font-semibold tracking-wider text-gray-600 mb-1">
          OUTLET <span class="text-red-500">*</span>
        </label>
        <select id="outlet" name="outlet" required
                class="block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-gray-800
                       focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent
                       disabled:bg-gray-100 disabled:text-gray-500 disabled:cursor-not-allowed">
          <option value="">Pilih Outlet</option>
        </select>
        <span class="mt-1 text-xs text-red-600"></span>
      </div>

      <!-- IP Low -->
      <div>
        <label for="ipLow" class="block text-[11px] font-semibold tracking-wider text-gray-600 mb-1">IP LOW</label>
        <input id="ipLow" name="ipLow" value="0.0.0.0" readonly
               class="block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-gray-600 bg-gray-100" />
      </div>

      <!-- IP High -->
      <div>
        <label for="ipHigh" class="block text-[11px] font-semibold tracking-wider text-gray-600 mb-1">IP HIGH</label>
        <input id="ipHigh" name="ipHigh" value="255.255.255.255" readonly
               class="block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-gray-600 bg-gray-100" />
      </div>
    </div>
  </div>

  <!-- Card footer (actions) -->
  <div class="px-6 py-4 border-t border-gray-100 flex items-center justify-end gap-3">
    <a asp-controller="Pinpad" asp-action="Index"
       class="px-5 py-2.5 rounded-md bg-gray-100 text-gray-700 hover:bg-gray-200">Cancel</a>
    <button type="submit"
            class="px-5 py-2.5 rounded-md bg-teal-600 hover:bg-teal-700 text-white">Create</button>
  </div>
</form>
