@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "System Levels";
}

<div class="p-4 md:p-6">
    <div class="mb-4">
        <a href="/SysLevel/Create"
            class="bg-teal-500 hover:bg-teal-600 text-white px-4 py-2 rounded-md shadow text-sm font-medium transition-colors inline-flex items-center">
            <span class="mr-1 font-bold text-lg">+</span> Tambah SysLevel
        </a>
    </div>

    <!-- Table Container -->
    <div class="bg-white shadow-lg rounded-lg border border-gray-200 overflow-hidden">
        <!-- Table Header with Search -->
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="flex items-center mt-2 md:mt-0">
                    <label class="text-sm text-gray-700 mr-3">Show:</label>
                    <select id="pageSizeSelect"
                        class="border border-gray-300 px-3 py-2 rounded focus:ring-2 focus:ring-blue-400 text-sm">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                    <span class="text-sm text-gray-700 ml-2">entries</span>
                </div>
                <!-- Search Box -->
                <div class="flex items-center gap-2">
                    <label class="text-sm font-medium text-gray-700">Search:</label>
                    <input type="text" id="searchInput" placeholder="Search system levels..."
                        class="border border-gray-300 rounded px-3 py-2 text-sm focus:ring-2 focus:ring-teal-500 focus:border-transparent min-w-[250px]">
                </div>
            </div>
        </div>

        <!-- Table Responsive Wrapper -->
        <div class="overflow-x-auto">
            <table id="sysLevelTable" class="min-w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-100 text-gray-700 text-sm">
                        <th class="px-4 py-3 font-semibold border-b border-gray-200">No</th>
                        <th class="px-4 py-3 font-semibold border-b border-gray-200">Name</th>
                        <th class="px-4 py-3 font-semibold border-b border-gray-200">Description</th>
                        <th class="px-4 py-3 font-semibold border-b border-gray-200">Created At</th>
                        <th class="px-4 py-3 font-semibold border-b border-gray-200">Updated At</th>
                        <th class="px-4 py-3 font-semibold border-b border-gray-200">Action</th>
                    </tr>
                </thead>
                <tbody id="tableBody" class="text-sm"></tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="text-sm text-gray-600" id="tableInfo">
                    Showing 0 to 0 of 0 entries
                </div>
                <div class="flex items-center space-x-2" id="paginationContainer">
                    <button id="prevBtn"
                        class="px-3 py-2 border border-gray-300 rounded hover:bg-gray-100 text-sm transition-colors disabled:opacity-50 disabled:cursor-not-allowed bg-white"
                        disabled>
                        Previous
                    </button>
                    <div id="pageNumbers" class="flex space-x-1"></div>
                    <button id="nextBtn"
                        class="px-3 py-2 border border-gray-300 rounded hover:bg-gray-100 text-sm transition-colors disabled:opacity-50 disabled:cursor-not-allowed bg-white"
                        disabled>
                        Next
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    let allLevels = [];
    let filteredLevels = [];
    let currentPage = 1;
    let pageSize = 10;

    function renderTable() {
        const start = (currentPage - 1) * pageSize;
        const end = start + pageSize;
        const paginatedData = filteredLevels.slice(start, end);

        let rows = "";
        paginatedData.forEach((level, index) => {
            rows += `
                <tr class="border-b">
                    <td class="px-4 py-2">${start + index + 1}</td>
                    <td class="px-4 py-2">${level.name}</td>
                    <td class="px-4 py-2">${level.description || "-"}</td>
                    <td class="px-4 py-2">${level.createdAt ? new Date(level.createdAt).toLocaleDateString() : "-"}</td>
                    <td class="px-4 py-2">${level.updatedAt ? new Date(level.updatedAt).toLocaleDateString() : "-"}</td>
                    <td class="px-4 py-2 flex space-x-2">
                        <a href="/SysLevel/Edit/${level.id}"
                            class="bg-orange-500 text-white w-8 h-8 rounded hover:bg-orange-600 transition-colors flex items-center justify-center">
                            <i class="fa fa-edit"></i>
                        </a>
                        <button onclick="deleteLevel(${level.id})" 
                            class="bg-red-500 text-white w-8 h-8 rounded hover:bg-red-600 transition-colors flex items-center justify-center">
                            <i class="fa fa-times"></i>
                        </button>
                    </td>
                </tr>`;
        });

        $("#tableBody").html(rows || `
            <tr>
                <td colspan="6" class="text-center text-gray-500 py-3">No data available</td>
            </tr>
        `);

        // Info
        const total = filteredLevels.length;
        const showingFrom = total === 0 ? 0 : start + 1;
        const showingTo = Math.min(end, total);
        $("#tableInfo").text(`Showing ${showingFrom} to ${showingTo} of ${total} entries`);

        renderPagination(total);
    }

    function renderPagination(total) {
        const totalPages = Math.ceil(total / pageSize);
        $("#prevBtn").prop("disabled", currentPage === 1);
        $("#nextBtn").prop("disabled", currentPage === totalPages || totalPages === 0);

        let buttons = "";
        for (let i = 1; i <= totalPages; i++) {
            buttons += `
                <button class="px-3 py-1 border rounded ${i === currentPage ? "bg-teal-500 text-white" : "bg-white"}"
                        onclick="goToPage(${i})">${i}</button>`;
        }
        $("#pageNumbers").html(buttons);
    }

    function goToPage(page) {
        currentPage = page;
        renderTable();
    }

    function filterLevels() {
        const searchText = $("#searchInput").val().toLowerCase();
        filteredLevels = allLevels.filter(level =>
            (level.name || "").toLowerCase().includes(searchText) ||
            (level.description || "").toLowerCase().includes(searchText)
        );
        currentPage = 1;
        renderTable();
    }

    // Load all syslevels
    function loadLevels() {
        $.ajax({
            url: "http://localhost:5125/api/syslevels",
            method: "GET",
            success: function (res) {
                if (Array.isArray(res)) {
                    allLevels = res;
                    filteredLevels = res;
                    renderTable();
                } else {
                    $("#tableBody").html(`<tr><td colspan="6" class="text-center text-red-500 py-3">Unexpected API response</td></tr>`);
                }
            },
            error: function () {
                $("#tableBody").html(`<tr><td colspan="6" class="text-center text-red-500 py-3">Failed to load system level data</td></tr>`);
            }
        });
    }

    // Delete syslevel
    function deleteLevel(id) {
        Swal.fire({
            title: 'Confirmation',
            text: 'Are you sure you want to delete this system level?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, Delete',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (!result.isConfirmed) return;

            $.ajax({
                url: `http://localhost:5125/api/syslevels/${id}`,
                type: "DELETE",
                success: function (response) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: response.message || 'System level has been deleted successfully',
                        timer: 2000,
                        showConfirmButton: false
                    });
                    loadLevels();
                },
                error: function (xhr) {
                    const res = xhr.responseJSON;
                    Swal.fire({
                        icon: 'error',
                        title: 'Failed',
                        text: res?.message || 'An error occurred while deleting the system level'
                    });
                }
            });
        });
    }

    // Events
    $(document).ready(function () {
        loadLevels();

        $("#searchInput").on("input", filterLevels);

        $("#pageSizeSelect").on("change", function () {
            pageSize = parseInt($(this).val());
            currentPage = 1;
            renderTable();
        });

        $("#prevBtn").on("click", function () {
            if (currentPage > 1) {
                currentPage--;
                renderTable();
            }
        });

        $("#nextBtn").on("click", function () {
            const totalPages = Math.ceil(filteredLevels.length / pageSize);
            if (currentPage < totalPages) {
                currentPage++;
                renderTable();
            }
        });
    });
</script>
